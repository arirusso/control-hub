#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require "optparse"
require "patch"

node_config_path = ARGV.first

options = {}

args = OptionParser.new do |opts|
  opts.banner = "Usage: patch [node config file] [options]"

  opts.on("-a", "--action [FILE]", "Use action spec") do |file|
    options[:action] = file
  end
end

args.parse!

if node_config_path.nil? || !File.exist?(node_config_path)
  puts args.help
  exit 0
else
  node_config_file = File.new(node_config_path)
end

action = File.new(options[:action]) unless options[:action].nil?

hub = Patch.new(node_config_file, :action => action)
hub.print_report
hub.listen
