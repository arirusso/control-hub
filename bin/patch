#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require "optparse"
require "patch"

nodes_config_path, patches_config_path = *ARGV

options = {}

args = OptionParser.new do |opts|
  opts.banner = "Usage: patch [nodes config file] [patches config file]"
end

args.parse!

if nodes_config_path.nil? || !File.exist?(nodes_config_path) || patches_config_path.nil? || !File.exist?(patches_config_path)
  puts args.help
  exit 0
else
  nodes_config_file = File.new(nodes_config_path)
  patches_config_file = File.new(patches_config_path)
end

hub = Patch::Hub.new(nodes_config_file, :patches => patches_config_file)
Patch::Report.print(hub)
hub.listen
